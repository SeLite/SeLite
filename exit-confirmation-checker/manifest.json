{

  "manifest_version": 2,
  "name": "SeLite Exit Confirmation Checker",
  "homepage_url": "http://selite.github.io/",
  "version": "0.17",

  "applications": {
    "gecko": {
      "id": "exit-confirmation-checker@selite.googlecode.com"
    }
  },
  
  "description": "Validation of confirmation when leaving an unsubmitted form etc.",

    "background": {
      "scripts": ["shared/migrating_to_webextensions.js", "shared/background.js"]
    },

    "permissions": [
      "management", "storage"
    ],

    "icons": {
      "32": "shared/favicon-32x32.png",
      "64": "shared/favicon-64x64.png"
    }
}
